{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions":  {
    "ecmaVersion":  2020,
    "sourceType":  "module"
  },
  "env": {
    "browser": true,
    "node":true,
    "jest": true
  },
  "root": true,
  "rules": {
    "quotes": ["error", "double"],
    "indent": ["error", 2]
  }
}
